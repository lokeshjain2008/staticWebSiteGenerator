mixin navLink(link, name)
 li.nav-item(
   class={active: name == selected}
    )
  a.nav-link(href=link)
    span.sr-only #{name}
  li
    a.nav-link(
      href=link,
      class={'active text-info': name == selected}
    ) #{name}

nav(class="navbar navbar-expand-lg navbar-light bg-secondary fixed-top")
  .container
    a.navbar-brand(href='#')
      img(src="/images/logo-nav.jpg")
    button.navbar-toggler.hidden-lg-up(type='button', data-toggle='collapse', data-target='#collapsibleNavId', aria-controls='collapsibleNavId', aria-expanded='false', aria-label='Toggle navigation')
      i.fa.fa-navicon
    #collapsibleNavId.collapse.navbar-collapse
      ul.navbar-nav.ml-auto.mt-2.mt-lg-0
        +navLink('/', "HOME")
        +navLink('/services.html', "SERVICES")
        +navLink('/training.html', "TRAINING")
        +navLink('/corporate.html', "CORPORATE VALUES")
        +navLink('/about.html', "ABOUT US")
        +navLink('/contact.html', "CONTACT")
        +navLink('/impressum.html', "IMPRESSUM")


